{
    "name": "ServiceNow Utils",
    "short_name": "ServiceNow Utils",
    "description": "ServiceNow Productivity tools. (Personal work, not affiliated to ServiceNow)",
    "author": "Arnoud Kooi / arnoudkooi.com",
    "version": "2.1",
    "permissions": [
        "activeTab",
        "https://*.service-now.com/*",
        "declarativeContent",
        "storage",
        "nativeMessaging",
        "contextMenus",
        "management",
        "cookies"
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.js",
            "js/snrest.js",
            "background.js"
        ],
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": [
                "https://*.service-now.com/*"
            ],
            "js": [
                "content_script_parent.js"
            ]
        },
        {
            "matches": [
                "https://*.service-now.com/*"
            ],
            "js": [
                "js/jquery.js",
                "content_script_all_frames.js"
            ],
            "all_frames": true
        }
    ],
    "commands": {
        "show-technical-names": {
          "suggested_key": {
            "default": "Ctrl+Shift+T",
            "mac": "Command+Shift+T"
          },
          "description": "Show Technical Names"
        },
        "pop": {
            "suggested_key": {
              "default": "Ctrl+Shift+P",
              "mac": "Command+Shift+P"
            },
            "description": "Pop-In / Pop-Out"
          },
        "_execute_page_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+W",
            "mac": "Command+Shift+W"
          }
        }
      },
    "page_action": {
        "default_title": "ServiceNow Utils",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "inject.js"
    ],
    "manifest_version": 2
}