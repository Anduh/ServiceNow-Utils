{
    "name": "ServiceNow Utils",
    "short_name": "ServiceNow Utils",
    "description": "ServiceNow Productivity tools. (Personal work, not affiliated to ServiceNow)",
    "author": "Arnoud Kooi / arnoudkooi.com",
    "version": "3.0.0.0",
    "permissions": [
        "activeTab",
        "https://*.service-now.com/*",
        "declarativeContent",
        "storage",
        "nativeMessaging",
        "contextMenus",
        "management",
        "cookies"
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.js",
            "js/snrest.js",
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.service-now.com/*"
            ],
            "exclude_matches": [
                "https://signon.service-now.com/*",
                "https://*.service-now.com/*XML=*"
            ],
            "js": [
                "content_script_parent.js"
            ]
        },
        {
            "matches": [
                "https://*.service-now.com/*"
            ],
            "exclude_matches": [
                "https://signon.service-now.com/*",
                "https://*.service-now.com/*XML=*"
            ],
            "js": [
                "js/jquery.js",
                "content_script_all_frames.js"
            ],
            "all_frames": true
        }
    ],
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+1",
                "mac": "Command+1"
            },
            "description": "Activate Extension"
        },
        "pop": {
            "suggested_key": {
                "default": "Ctrl+2",
                "mac": "Command+2"
            },
            "description": "Pop-In / Pop-Out"
        },
        "show-technical-names": {
            "suggested_key": {
                "default": "Ctrl+3",
                "mac": "Command+3"
            },
            "description": "Show Technical Names"
        },
        "toggle-scriptsync": {
            "suggested_key": {
                "default": "Ctrl+4",
                "mac": "Command+4"
            },
            "description": "Open VS Code ScriptSync tab"
        }
    },
    "page_action": {
        "default_title": "ServiceNow Utils",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "show_matches": ["https://*.service-now.com/*"],
        "hide_matches": ["https://signon.service-now.com/*"]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "web_accessible_resources": [
        "inject.js",
        "inject_parent.js"
    ],
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "email@arnoudkooi.com"
        }
    }
}
